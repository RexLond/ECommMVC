                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPhoneConfirmed" /> @Html.DisplayNameFor(model => model.IsPhoneConfirmed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
