@model ECommMVC.Entities.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Message)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Message)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.User)</dt>
        @if(Model.User != null)
        {
            <dd class="col-sm-10">@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)</dd>
        }
        else
        {
            <dd class="col-sm-10">No User</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
