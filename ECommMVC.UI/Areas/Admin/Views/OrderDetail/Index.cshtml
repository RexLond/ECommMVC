@model IEnumerable<ECommMVC.Entities.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

@Html.AntiForgeryToken()

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Discount)</th>
            <th>@Html.DisplayNameFor(model => model.VAT)</th>
            <th>@Html.DisplayNameFor(model => model.Product)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Order.ShipAddress)</td>
            <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => item.Discount)</td>
            <td>@Html.DisplayFor(modelItem => item.VAT)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
            <td>
            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a>
            <button class="btn btn-danger btn-sm" onclick="deleteEntity(@item.ID, 'OrderDetail')">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
