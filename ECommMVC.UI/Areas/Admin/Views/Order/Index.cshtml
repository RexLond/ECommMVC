@model IEnumerable<ECommMVC.Entities.Order>

@{
    ViewData["Title"] = "Index";
}

@Html.AntiForgeryToken()

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Freight)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.ShippedAt)</th>
            <th>@Html.DisplayNameFor(model => model.DeliveredAt)</th>
            <th>@Html.DisplayNameFor(model => model.ShipAddress)</th>
            <th>@Html.DisplayNameFor(model => model.ShipCity)</th>
            @*<th>@Html.DisplayNameFor(model => model.ShipRegion)</th>*@
            @*<th>@Html.DisplayNameFor(model => model.ShipPostalCode)</th>*@
            <th>@Html.DisplayNameFor(model => model.ShipCountry)</th>
            <th>@Html.DisplayNameFor(model => model.Shipper)</th>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            @*<th>@Html.DisplayNameFor(model => model.Payment)</th>*@
            <th class="tableActionButtons-L"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Freight)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ShippedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.DeliveredAt)</td>
                <td>@Html.DisplayFor(modelItem => item.ShipAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.ShipCity)</td>
                @*<td>@Html.DisplayFor(modelItem => item.ShipRegion)</td>*@
                @*<td>@Html.DisplayFor(modelItem => item.ShipPostalCode)</td>*@
                <td>@Html.DisplayFor(modelItem => item.ShipCountry)</td>

                @if(item.Shipper != null)
                {
                    <td>@Html.DisplayFor(modelItem => item.Shipper.Name)</td>
                }
                else
                {
                    <td></td>
                }

                @if(item.User != null)
                {
                    <td>@(item.User.FirstName + " " + item.User.LastName)</td>

                }
                else
                {
                    <td></td>
                }
            
                @*<td>@Html.DisplayFor(modelItem => item.Payment.Freight)</td>*@
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <button class="btn btn-danger btn-sm" onclick="deleteEntity(@item.ID, 'Order')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>