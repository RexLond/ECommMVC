@model IEnumerable<Product>

<div class="">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center text-center">
            <li class="page-item"><a class="page-link" href="/shop/category/@ViewContext.RouteData.Values["id"]/1"><span>&laquo;</span></a></li>
@* 
            <li class="page-item"><a class="page-link" href="/shop/category/@ViewContext.RouteData.Values["id"]/@(ViewBag.PageNumber > 1 ? ViewBag.PageNumber - 1 : ViewBag.PageNumber)"><span>&lt;</span></a></li>
 *@
            @foreach(var pageRange in ViewBag.PageRange)
            {
                <li class="page-item">
                    <a class="page-link @(pageRange == ViewBag.PageNumber ? "active" : "")" href="/shop/category/@ViewContext.RouteData.Values["id"]/@pageRange">
                        <span>@pageRange</span>
                    </a>
                </li>
            }
@* 
            <li class="page-item"><a class="page-link" href="/shop/category/@ViewContext.RouteData.Values["id"]/@(ViewBag.PageNumber < ViewBag.TotalPage ? ViewBag.PageNumber + 1 : ViewBag.PageNumber)"><span>&gt;</span></a></li>
 *@
            <li class="page-item"><a class="page-link" href="/shop/category/@ViewContext.RouteData.Values["id"]/@ViewBag.TotalPage"><span>&raquo;</span></a></li>
        </ul>
    </nav>
</div>


