@model ECommMVC.Entities.User

@{
    ViewData["Title"] = "Login";
}

<link href="~/css/sign-in.css" rel="stylesheet" />

<main class="form-signin w-100 m-auto">
    <form asp-action="Login">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" />
            <label asp-for="Email" >Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" type="password" />
            <label asp-for="Password" class="control-label"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @* <div class="form-check text-start my-3 position-relative">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Remember me</label>
            <a asp-action="Register" asp-controller="Security" class="btn btn-sm btn-outline-secondary position-absolute end-0">Register</a>
        </div> *@

        <button class="btn btn-primary w-100 py-2 mb-2" type="submit">Sign in</button>
        <a asp-action="Register" asp-controller="Security" class="btn btn-outline-secondary end-0 w-100 mb-2">Register</a>
    </form>
</main>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
