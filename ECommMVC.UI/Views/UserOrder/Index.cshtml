@model List<Order>

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    @if (Model != null)
    {
        @foreach (var order in Model)
        {
            <div class="card">
                <div class="card-header">
                    Order ID: @order.ID
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">Freight: </dt>
                        <dd class="col-sm-10">@order.Freight</dd>
                        <dt class="col-sm-2">Order Date: </dt>
                        <dd class="col-sm-10">@order.OrderDate</dd>
                        <dt class="col-sm-2">Shipped At: </dt>
                        <dd class="col-sm-10">@order.ShippedAt</dd>
                        <dt class="col-sm-2">Delivered At: </dt>
                        <dd class="col-sm-10">@order.DeliveredAt</dd>
                        <dt class="col-sm-2">ShipAdress: </dt>
                        <dd class="col-sm-10">@order.ShipAddress @order.ShipRegion @order.ShipPostalCode @order.ShipCity @order.ShipCountry</dd>
                        <dt class="col-sm-2">Shipper: </dt>
                        @if(order.Shipper != null)
                        {
                            <dd class="col-sm-10">@order.Shipper.Name</dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">No Shipper</dd>
                        }
                        <dt class="col-sm-2">Payment: </dt>
                        @if (order.Payment != null)
                        {
                            <dd class="col-sm-10">Payment okay</dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">No payment</dd>
                        }

                    </dl>
                </div>
                <hr class="m-0" />
            </div>
        }
    }
</div>